{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "playwright"]
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "helpers/**/*.ts", "configs/**/*.ts"]
}
